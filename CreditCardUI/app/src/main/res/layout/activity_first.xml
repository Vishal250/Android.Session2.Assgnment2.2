<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99000000"
    tools:context="com.example.vishal.creditcardui.MainActivity"
    android:weightSum="0">


    <TextView
        android:id="@+id/textView1"
        android:text="Enter Card Balance($)"
        android:textColor="#ffffff"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:gravity="left"
        android:textSize="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <TextView
        android:text="Enter Yearly Interest Rate(%)"
        android:textColor="#ffffff"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:gravity="left"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/editText2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:background="#ffffff"/>

    <TextView
        android:text="Enter Minimum Payment($)"
        android:textColor="#ffffff"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="21dp"
        android:gravity="left"
        android:id="@+id/textView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/textView4"
        android:id="@+id/editText4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:background="#ffffff"/>

    <TextView
        android:text="Final Card Balance ($)"
        android:textColor="#ffffff"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_toStartOf="@+id/editText4" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/editText5"
        android:background="#ffffff"/>

    <TextView
        android:text="Months Remaining"
        android:textColor="#ffffff"
        android:gravity="left"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginTop="22dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_toLeftOf="@+id/editText5"
        android:layout_toStartOf="@+id/editText5" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:id="@+id/editText6"
        android:background="#ffffff"/>

    <TextView
        android:text="Interest Paid Will Be ($)"
        android:textColor="#ffffff"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_toLeftOf="@+id/editText6"
        android:layout_toStartOf="@+id/editText6" />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:id="@+id/editText7"
        android:background="#ffffff"/>

    <Button
        android:text="Compute"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
